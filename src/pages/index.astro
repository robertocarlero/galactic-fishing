---
import Layout from "@components/layout";
import LeaderBoard from "@components/leader-board.astro";
import Market from "@components/market.astro";
import { Tabs, TabPanel } from "@components/ui/tabs";

const TABS = {
  leaderboard: {
    id: "leaderboard",
    label: "Leaderboard",
  },
  market: {
    id: "market",
    label: "Market",
  },
};

const TABS_ARRAY = Object.values(TABS);
---

<Layout title="Ejemplo de Tabs Corregido">
  <Tabs
    tabs={TABS_ARRAY}
    initialTabId={TABS.leaderboard.id}
    class="py-6 pt-12 p-4 max-w-3xl mx-auto"
    panelsClass="overflow-auto"
  >
    <TabPanel tabId={TABS.leaderboard.id}>
      <LeaderBoard />
    </TabPanel>
    <TabPanel tabId={TABS.market.id}>
      <Market />
    </TabPanel>
  </Tabs>
</Layout>
